{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["next/core-web-vitals","prettier"],
  "plugins": ["tailwindcss"],
  "settings": { 
    "tailwindcss": {"callees": ["cn"], "config": "tailwind.config.js" },
    "next": { "rootDir": true }
  },
  "overrides": [
    { 
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}